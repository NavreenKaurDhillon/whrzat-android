<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:transitionName="pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sriv_oval="true" />


    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_grey_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvName"
        fontPath="fonts/AvenirLTStd_Medium.otf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        android:transitionName="name"
        app:layout_constraintEnd_toStartOf="@+id/tvTime"
        app:layout_constraintLeft_toRightOf="@+id/ivPic"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Adele Wells" />

    <TextView
        android:id="@+id/tvLastMessage"
        fontPath="fonts/AvenirLTStd_Book.otf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/greyWhrzat"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/ivPic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintRight_toLeftOf="@+id/tvTime"
        app:layout_constraintTop_toTopOf="@+id/ivPic"
        app:layout_constraintVertical_bias="0.63"
        tools:text="How To Quick And Easy naffsf" />

    <TextView
        android:id="@+id/tvTime"
        fontPath="fonts/AvenirLTStd_Book.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyWhrzat"
        android:textSize="@dimen/sp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10 min" />
</androidx.constraintlayout.widget.ConstraintLayout>

