<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_16"
    android:orientation="horizontal">


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:riv_corner_radius="@dimen/dp_10"
        android:scaleType="centerCrop"
        tools:src="@drawable/profile_avatar_placeholder_large"
        android:id="@+id/ivSpot"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:alpha=".8"
        android:layout_toEndOf="@+id/ivSpot"
        android:layout_toStartOf="@+id/tvBlock"
        android:textSize="@dimen/sp_16"
        android:maxLines="1"
        android:id="@+id/tvName"
        android:fontFamily="@font/opensans_semibold"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        tools:text="Ankit Singh"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:id="@+id/tvBlock"
        android:layout_alignParentEnd="true"
        android:background="?selectableItemBackground"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/red_create"
        android:text="@string/label_unblock"
        />





</RelativeLayout>