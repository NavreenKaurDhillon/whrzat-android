<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llreferal"
    tools:context=".ui.referralCode.ReferalActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llBackOtp"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/imgRefralback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_back"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <TextView
        android:id="@+id/txtreferalcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_14"
        android:layout_marginTop="20sp"
        android:text="@string/referral_code"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/dp_24"
        android:textSize="@dimen/dp_24"
        tools:ignore="MissingPrefix" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etreferralCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Enter referral code"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:fontFamily="@font/opensans_regular"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="@dimen/dp_12"
            android:textSize="@dimen/sp_16"
            tools:ignore="LabelFor" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_16"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@color/shadow" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:background="@drawable/baundary_login"
        android:gravity="center"
        android:id="@+id/tvSubmit"
        android:foreground="?selectableItemBackground"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:text="Submit"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"/>
    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_14"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_gravity="right"
        android:text="@string/skip"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_14"
        tools:ignore="MissingPrefix" />

</LinearLayout>
</layout>