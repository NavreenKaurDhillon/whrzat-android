<?xml version="1.0" encoding="utf-8"?>
<layout >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_cross" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/label_change_password"
        android:textColor="@color/red_create"
        android:layout_marginTop="@dimen/dp_24"
        android:textSize="20sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:textColorHint="@color/lightGrey"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/red_create">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etName"
            android:backgroundTint="@color/lightGrey"
            android:hint="@string/label_old_password"
            android:inputType="textPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_16"
            android:textColorHint="@color/lightGrey" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:textColorHint="@color/lightGrey"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/red_create">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etName"
            android:backgroundTint="@color/lightGrey"
            android:hint="@string/label_new_password"
            android:inputType="textPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_16"
            android:textColorHint="@color/lightGrey" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:textColorHint="@color/lightGrey"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/red_create">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etName"
            android:backgroundTint="@color/lightGrey"
            android:hint="@string/label_confirm_pass"
            android:inputType="textPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_16"
            android:textColorHint="@color/lightGrey" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tvSubmit"
        fontPath="fonts/AvenirNextBold.otf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_52"
        android:height="@dimen/dp_24"
        android:background="@drawable/corners_credentials"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:text="@string/label_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />


</LinearLayout>
</layout>
